<file path="src/components/Button.astro">
---
const {
  text,
  action,
  id = "",
  padding = "48px",
  width = "auto",
  buttonStyle = "primary",
} = Astro.props;
---

<div class={`button ${buttonStyle}`} id={id}>
  <p class={`button-text text-${buttonStyle}`}>{text}</p>
</div>

<style define:vars={{ padding, width }}>
  .button {
    padding-top: 12px;
    padding-bottom: 12px;
    padding-left: var(--padding);
    padding-right: var(--padding);
    border-radius: 7px;
    margin-bottom: 1rem;
    cursor: pointer;
    text-align: center;
    font-size: 1.25rem;
    font-weight: 600;
    box-shadow: 3px 4px 0 rgba(0, 0, 0, 1);
    display: inline-block;
    width: var(--width);
  }

  .primary {
    background-color: var(--color-portica);
  }

  .secondary {
    background-color: var(--color-teal);
  }

  .button:focus,
  .button:hover {
    background-color: var(--color-portica);
  }

  div.button.secondary:focus,
  div.button.secondary:hover {
    background-color: var(--color-teal) !important;
  }

 {
    background-color: var(--color-portica-hover);
  }

  .button:active {
    background-color: var(--color-portica-active);
  }

  .button p.button-text {
    margin: 0;
    padding: 0;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-pearl);
    text-shadow: 0px 3px 4px rgba(0, 0, 0, 0.08);
  }

  .text-primary {
    color: var(--color-pearl);
    text-shadow: 0px 3px 4px rgba(0, 0, 0, 0.08);
  }

  .button .button-text.text-secondary {
    color: var(--color-text-light);
  }
</style>
</file>

<file path="src/components/Footer.astro">
---
import NewsletterSignUp from "./NewsletterSignUp.astro";
import Social from "./Social.astro";
---

<footer>
  <div id="footer-container">
    <div id="newsletter-container">
      <h2 class="hd-shadow txt-lite">
        Get Planning Center tips and tricks right in your inbox!
      </h2>
      <NewsletterSignUp />
    </div>
    <div id="footer-content-container">
      <div id="footer-logo-container">
        <img
          src="/src/assets/horizontal-light.svg"
          alt="Sunday Ready Solutions logo."
        />
        <p class="txt-shadow txt-lite caption">
          Sunday Ready Solutions provides expert Planning Center management, custom
          workflows, and administrative support so you can focus on what matters
          most.
        </p>
      </div>
      <Social />
    </div>
  </div>
  <div class="copyright-container">
    <p class="copyright"> 2025, Sunday Ready Solutions. All Rights Reserved.</p>
    <!-- todo: add a privacy policy -->
    <a href="/" class="copyright">Privacy Policy</a>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-teal);
    margin: 0;
    padding: 1rem;
    padding-bottom: 0;
  }

  p.caption {
    font-weight: 400;
    font-size: .75rem;
  }

  #footer-logo-container {
    padding: 1.5rem;
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 2rem;
  }

  #footer-logo-container img {
    width: 10rem;
  }

  .copyright-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }

  .copyright {
    color: var(--color-silk);
    font-size: .5rem;
    text-align: center;
    text-decoration: none;
    font-weight: 400;
  }
</style>
</file>

<file path="src/components/Header.astro">
---
