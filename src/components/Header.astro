---
import Container from "../layouts/Container.astro";
import Section from "../layouts/Section.astro";
import Button from "./Button.astro";
import Navigation from "./Navigation.astro";
---

<Section zIndex="5" backgroundColor="var(--color-background)">
    <header>
        <div class="header">
            <img
                src="src/assets/sunday-ready-horiz-light-background.svg"
                alt="Sunday Ready Solutions Logo"
                class="header-logo"
            />
            <Navigation />
            <i class="iconoir-menu" id="open-navigation"></i>
        </div>
    </header>
</Section>

<style>
    header {
        position: fixed;
        width: 100%;
        height: 3.8rem;
        top: 0;
        box-sizing: border-box;
    }

    .header {
        display: flex;
        justify-content: space-between;
        width: 100vw;
        height: 100%;
        margin: 0 auto;
        padding: 0 1.13rem;
        box-sizing: border-box;
        align-items: center;
    }

    .iconoir-menu {
        font-size: 31px;
    }

    .header-logo {
        width: 147px;
        filter: drop-shadow(0px 3px 4px rgba(0, 0, 0, 0.08));
    }
</style>
